# ─── Server ───────────────────────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ─── Database (PostgreSQL) ────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:password@localhost:5432/starkdca?schema=public

# ─── Redis ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT ──────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=your-access-secret-min-32-chars-long-here
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-long-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ─── Starknet ─────────────────────────────────────────────────────────
STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io
DCA_CONTRACT_ADDRESS=0x_YOUR_CONTRACT_ADDRESS
EXECUTOR_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY
EXECUTOR_ADDRESS=0x_YOUR_EXECUTOR_ADDRESS

# ─── Price API ────────────────────────────────────────────────────────
PRICE_API_URL=https://api.coingecko.com/api/v3
PRICE_API_KEY=

# ─── Cron ─────────────────────────────────────────────────────────────
DCA_CRON_SCHEDULE=*/1 * * * *

# ─── Rate Limiting ───────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ─── CORS ─────────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ─── Cache TTLs (seconds) ────────────────────────────────────────────
PRICE_CACHE_TTL=60
PLAN_CACHE_TTL=30
IDEMPOTENCY_TTL=86400
DISTRIBUTED_LOCK_TTL=30

# ─── Email Configuration ─────────────────────────────────────────────
# Provider: 'nodemailer' or 'sendgrid'
EMAIL_PROVIDER=nodemailer

# SMTP (for NodeMailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=

# From address for all emails
EMAIL_FROM_NAME=StarkDCA
EMAIL_FROM_ADDRESS=noreply@starkdca.com

# ─── Google OAuth ────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# ─── Frontend URL ────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000

# ─── Password Hashing ────────────────────────────────────────────────
BCRYPT_ROUNDS=12
