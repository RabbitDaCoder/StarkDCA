# ─── Email Service Configuration ──────────────────────────────────────

# Shared secret between backend and this email service
EMAIL_SERVICE_API_KEY=your-secret-api-key-min-32-chars-here

# Provider: 'nodemailer' or 'sendgrid'
EMAIL_PROVIDER=nodemailer

# SMTP (for NodeMailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=

# From address for all emails
EMAIL_FROM_NAME=StarkDCA
EMAIL_FROM_ADDRESS=starkdca@gmail.com

# Frontend URL (used in email templates)
FRONTEND_URL=http://localhost:3000

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:4000
